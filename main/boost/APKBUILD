[ -z "$_beta" ] || _src_sha512sum="bb62af8276466fecf795f83de735cfff5d37813c4c3c84747c34a72d5dcdf810fac7b8bdd6d28556d2319a5a5a03b25d4ec48273661e3f275dc29d4d7a74aff9"
sha512sums="$_src_sha512sum  ${pkgname}_${_pkgver}${_beta:+_b$_beta}.tar.bz2
